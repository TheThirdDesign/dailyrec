
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-md-3"><%= post.title %></div>
      <div class="col-md-2"><%= post.date %></div>
      <div class="col-md-2"><%= post.category %></div>
      <div class="col-md-2"><%= link_to "EDIT", edit_post_path(post.id) %></div>
      <div class="col-md-2"><%= link_to "DELETE", post_path(post.id), :action => 'delete' %></div>
    </div>
  <% end %>
