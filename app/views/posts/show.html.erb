<div id="postHolder">
    <div id="topImage">
      <img src="<%= @post.pictures[0] %>">
    </div>
    <div id="contentArea">
      <div id="showTitle"><%= @post.title %></div>
    </div>
    <div id="contentArea">
      <% @admin = Admin.find_by(id: @post.admin_id)%>
      <div id="showDateCategory"><%= @post.date %> // <%= @admin.name %></div>
    </div>
    <div id="contentArea">
      <div id="showContent"><%= @post.content %></div>
    </div>
    <% @post.pictures.each do |picture| %>
      <% if @post.pictures.index(picture) == 0 %>
      <% else %>
        <div id="topImage">
          <img src="<%= picture %>">
        </div>
      <% end %>
    <% end %>
    <div id="bottomBuffer">
    </div>
</div>

