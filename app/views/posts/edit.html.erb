<div id="form1">
  <%= form_for @post do |f| %>

           <div class="section">
              <%= f.label :title %>
              </br>
              <%= f.text_field :title %>
            </div>

           <div class="section">
              <%= f.label :date %>
              </br>
              <%= f.text_field :date %>
           </div>

           <div class="section">
              <%= f.label :teaser %>
              </br>
              <%= f.text_area :teaser, id: "teaser" %>
           </div>
           <div class="section">
              <%= f.label :content %>
              </br>
              <%= f.text_area :content, id: "content" %>
           </div>

           <div class="section">
              <%= f.label :pictures %>
              </br>
              <%= f.text_field :pictures, as: :array %>
              <%= f.hidden_field :admin_id, :value => session[:admin_id] %>
           </div>

           <div class="section">
             <div class="category">
               <%= f.radio_button :category, 'favorites', :checked => true %>
               <%= f.label :category_favorites, 'Current Favorites' %>
             </div>
             <div class="category">
               <%= f.radio_button :category, 'stories' %>
               <%= f.label :category_stories, 'Stories' %>
             </div>
             <div class="category">
               <%= f.radio_button :category, 'home' %>
               <%= f.label :category_home, 'At Home' %>
             </div>
           </div>

           <div class="section">
           <div id="layoutHolder">
            <div class="radioHolder">
              <div class="buttonHolder">
              <%= f.radio_button :layout, 'pictureLeft', :checked => true %>
              <%= f.label :layout_pictureLeft, 'Picture on Left', :class => "layoutTitle"  %>
              </div>
              <%= image_tag 'PictureLeft.png'%>
            </div>
            <div class="radioHolder">
              <div class="buttonHolder">
              <%= f.radio_button :layout, 'horizontalPicture' %>
              <%= f.label :layout_horizontalPicture, 'Picture Horizontal', :class => "layoutTitle"  %>
              </div>
              <%= image_tag 'horizontalTop.png'%>
             </div>
             <div class="radioHolder">
               <div class="buttonHolder">
              <%= f.radio_button :layout, 'threePics' %>
              <%= f.label :layout_threePics, '3 Pictures On Top', :class => "layoutTitle"  %>
              </div>
              <%= image_tag 'threeonTop.png'%>
             </div>
             <div class="radioHolder">
               <div class="buttonHolder">
              <%= f.radio_button :layout, 'pictureRight' %>
              <%= f.label :layout_pictureRight, 'Picture on Right', :class => "layoutTitle" %>
              </div>
              <%= image_tag 'PictureRight.png'%>
            </div>
          </div>
        </div>
   <div id="formButtonHolder">
     <%= f.submit "SAVE" %>
      <% end %>
      </div>
</div>

<script>
			$('#content').wysihtml5({
        "html": true
			});
</script>
